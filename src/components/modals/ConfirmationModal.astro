---
const { id, title, badgeId = null, titleIcon = null } = Astro.props
---

<div
  class="modal fade"
  id={id}
  tabindex="-1"
  aria-labelledby={`${id}Label`}
  aria-hidden="true"
  data-bs-backdrop="static"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-body-emphasis" id={`${id}Label`}>
          {titleIcon && <i class={`me-1 ${titleIcon}`} />}
          {title}
          {
            badgeId && (
              <span class="badge bg-body-tertiary text-body-emphasis border ms-1" id={badgeId} />
            )
          }
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <slot name="body" />
      </div>

      <div class="modal-footer">
        <slot name="footer" />
      </div>
    </div>
  </div>
</div>
