---
const { title = 'Agregar', useMultipart = false } = Astro.props
const enctypeAttr = useMultipart ? 'multipart/form-data' : undefined
---

<div
  class="modal fade"
  id="addModal"
  tabindex="-1"
  aria-labelledby="addModalLabel"
  aria-hidden="true"
  data-bs-backdrop="static"
>
  <div class="modal-dialog modal-dialog-scrollable modal-lg modal-fullscreen-sm-down">
    <div class="modal-content">
      <header class="modal-header">
        <h5 class="modal-title text-body-emphasis" id="addModalLabel">
          <i class="bi bi-plus-circle me-1"></i>
          {title}
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"
        ></button>
      </header>

      <div class="modal-body">
        <form id="addForm" enctype={enctypeAttr} novalidate>
          <slot />
        </form>
      </div>

      <footer class="modal-footer">
        <div class="container-fluid px-0">
          <div class="row gx-0 w-100">
            <div class="d-none d-md-block col-md-6 px-0"></div>

            <div class="col-12 col-md-6 px-0">
              <div class="d-flex gap-2">
                <button type="button" class="btn btn-custom-secondary w-50" data-bs-dismiss="modal">
                  Cancelar
                </button>
                <button
                  type="submit"
                  class="btn btn-custom-primary d-flex align-items-center justify-content-center w-50"
                  form="addForm"
                  id="addBtn"
                >
                  <i class="bi bi-plus-circle me-2"></i>
                  <span
                    class="spinner-border spinner-border-sm me-2 d-none"
                    role="status"
                    aria-hidden="true"></span>
                  Agregar
                </button>
              </div>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </div>
</div>
