{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@views/*": ["src/views/*"]
    }
  },
  "include": [".astro/types.d.ts", "**/*", ".prettierrc.config.mjs"],
  "exclude": ["dist"]
}
